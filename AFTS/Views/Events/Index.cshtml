@model IEnumerable<AFTS.Models.Event>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Events";
}


@ViewBag.Session

<div class="container-fluid" style="padding-top: 40px; padding-bottom: 600px;">
    <h2>All Events</h2>

    <div class="row">
        <div class="col-12 table-responsive">
            @if (Context.Session.GetString("RoleId") == "3" || Context.Session.GetString("RoleId") == "2")
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th>@Html.DisplayNameFor(model => model.Date)</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>


                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                <td>
                                    <a class="button-success pure-button" asp-action="Details" asp-route-id="@item.EventId">View Event</a>

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            }
            else if (Context.Session.GetString("RoleId") == "1")
            {
                <p>
                    <a asp-action="Create">Create New</a>
                </p>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th>@Html.DisplayNameFor(model => model.Date)</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>


                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                <td>
                                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.EventId">View Event</a>

                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.EventId">Edit</a> |
                                    <a asp-action="Delete" asp-route-id="@item.EventId">Delete</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            }
        </div>
    </div>
    </div>


