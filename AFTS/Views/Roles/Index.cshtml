@model IEnumerable<AFTS.Models.Role>

@{
    ViewData["Title"] = "Roles";
}

<div class="container-fluid" style="padding-top: 40px; padding-bottom: 600px;">
    <h2>All Roles</h2>
    <p><a asp-action="Create">Create New</a></p>
    <div class="row">
        <div class="col-12 table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Role Name
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.RoleType)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.RoleId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.RoleId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.RoleId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    </div>
