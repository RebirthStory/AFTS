@model IEnumerable<AFTS.Models.Schedule>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="pure-table pure-table-horizontal">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ScheduleId)</th>

            <th>Event Name</th>

            <th>Coach</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {

        <tr>
            <td>@Html.DisplayFor(modelItem => item.ScheduleId)</td>
            <td>@Html.DisplayFor(modelItem => item.Event.Name)</td>
            <td>@Html.DisplayFor(modelItem => item.Member.Name)</td>
            <td>

                <a asp-action="Edit" asp-route-id="@item.ScheduleId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ScheduleId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ScheduleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
